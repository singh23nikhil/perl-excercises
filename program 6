#Question 6: To count the number of numbers in a string and print it

my $name="spiti1523687459valley";
my @array= split('',$name);
my $count=0;

for($i=0;$i<length($name);$i++)
{
        if ($array[$i]=~/\d/)
        {
            $count++;
            print "$array[$i]\n";
        }
}
print "the total number of numbers are :$count";
